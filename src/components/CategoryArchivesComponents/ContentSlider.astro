---
const { bg_desk, sl1, sl2, sl3, sl4, sl5 } = Astro.props;
console.log(bg_desk);
---

<div class="relative my-16">
  <!-- Slider component -->
  <div
    class="swiper swiper6 my-12 mx-2 h-[684px] bg-cover bg-no-repeat"
    style={{ backgroundImage: `url(${bg_desk})` }}
  >
    <div class="swiper-wrapper">
      <!-- Slides -->
      <div class="swiper-slide">
        <div class="slide-content">
          <p
            class="text-[#A64485] text-base md:text-2xl bg-white tracking-[-0.55px] py-10 px-8 leading-6 md:leading-8 font-giloryBold border-[#EFEFEF] border-[12px] rounded-2xl"
          >
            {sl1}
          </p>
        </div>
      </div>
      <div class="swiper-slide">
        <div class="slide-content">
          <p
            class="text-[#A64485] text-base md:text-2xl bg-white tracking-[-0.55px] py-10 px-8 leading-6 md:leading-8 font-giloryBold border-[#EFEFEF] border-[12px] rounded-2xl"
          >
            {sl2}
          </p>
        </div>
      </div>
      <div class="swiper-slide">
        <div class="slide-content">
          <p
            class="text-[#A64485] text-base md:text-2xl bg-white tracking-[-0.55px] py-10 px-8 leading-6 md:leading-8 font-giloryBold border-[#EFEFEF] border-[12px] rounded-2xl"
          >
            {sl3}
          </p>
        </div>
      </div>
      <div class="swiper-slide">
        <div class="slide-content">
          <p
            class="text-[#A64485] text-base md:text-2xl bg-white tracking-[-0.55px] py-10 px-8 leading-6 md:leading-8 font-giloryBold border-[#EFEFEF] border-[12px] rounded-2xl"
          >
            {sl4}
          </p>
        </div>
      </div>
      <div class="swiper-slide">
        <div class="slide-content">
          <p
            class="text-[#A64485] text-base md:text-2xl bg-white tracking-[-0.55px] py-10 px-8 leading-6 md:leading-8 font-giloryBold border-[#EFEFEF] border-[12px] rounded-2xl"
          >
            {sl5}
          </p>
        </div>
      </div>
      <!-- Add more slides as needed -->
    </div>
    <!-- If we need pagination -->
    <div class="swiper-pagination"></div>
  </div>
</div>

<style is:global>
  /* Slide content styles */
  .slide-content {
    width: 50%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    z-index: 10;
    opacity: 1;
    transition: opacity 0.5s ease;
  }

  .swiper-horizontal > .swiper-pagination-bullets,
  .swiper-pagination-bullets.swiper-pagination-horizontal,
  .swiper-pagination-custom,
  .swiper-pagination-fraction {
    bottom: 20%;
  }

  .swiper-horizontal > .swiper-pagination-bullets .swiper-pagination-bullet,
  .swiper-pagination-horizontal.swiper-pagination-bullets
    .swiper-pagination-bullet {
    width: 20px;
    height: 20px;
    background-color: white;
  }

  @media (max-width: 1280px) {
    .slide-content {
      width: 80%;
    }
  }

  @media (max-width: 768px) {
    .slide-content {
      width: 90%;
    }
  }
</style>
