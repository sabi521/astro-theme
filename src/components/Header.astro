---
import Navigation from "./Navigation.astro"
---

<header class="new-nav-header">
  <div class="header-section">
    <ul class="promos flex justify-center items-center py-4 border-b-[1px]">
      <li class="slot-prm px-2">
        <a
          href="https://slotspressdev.wpengine.com/promotions"
          class="font-medium text-[#FD106A] text-xl">PROMOTIONS</a
        >
      </li>
      <li class="slot-beach px-2">
        <a class="font-medium text-[#FD106A] text-xl" href="/the-beach"
          >THE BEACH</a
        >
      </li>
    </ul>

    <div class="header-row flex justify-between items-center py-8 ">
      <div class="flex items-center w-1/2 px-4">
            <Navigation />
        <div class="logo-img relative z-50">
          <a href="http://slotsparadise.com">
            <span class="et_pb_image_wrap">
              <img
                width="240"
                height="82"
                alt="slot paradise logo"
                title="slot paradise logo"
                class=""
                src="https://slotsparadise.com/wp-content/uploads/2022/02/Group-2796.png"
              />
            </span>
          </a>
        </div>
      </div>

      <div class="login-join-container flex justify-end items-center w-1/2">
        <div class="px-2 sm:px-4">
          <a
            class="login-btn border-2 hover:border-[#FD106A] px-4 sm:px-10 py-2 sm:py-4 inline-block rounded-full hover:text-[#FD106A] text-[#1C8FDF] border-[#1C8FDF] text-sm sm:text-[22px]"
            href="https://slotsparadise.com/#login">Login</a
          >
        </div>

        <div>
          <a
            class="join-btn border-2 hover:border-[#FD106A] px-4 sm:px-10 py-2 sm:py-4 inline-block rounded-full hover:bg-[#FD106A] text-[#ffffff] border-[#1C8FDF] bg-[#1C8FDF] text-sm sm:text-[22px]"
            href="https://slotsparadise.com/#register">Join</a
          >
        </div>
      </div>
    </div>
  </div>
</header>


